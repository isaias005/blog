pipeline {
    agent {
        docker {
            image 'node:lts'
            args '-d -p 3000:3000'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh './jenkins/scripts/build.sh'
            }
        }
        stage('Deploy') { 
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}